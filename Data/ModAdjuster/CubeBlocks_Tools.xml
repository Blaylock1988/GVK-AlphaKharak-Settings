<?xml version="1.0" encoding="utf-8"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<CubeBlocks>
		<!-- Double radius, improve impact resistance -->
		<Definition xsi:type="MyObjectBuilder_ShipWelderDefinition">
			<Id>
				<TypeId>ShipWelder</TypeId>
				<SubtypeId>LargeShipWelder</SubtypeId>
			</Id>
			<SensorRadius>4</SensorRadius>
			<DeformationRatio>0.2</DeformationRatio>
			<UsesDeformation>false</UsesDeformation>
		</Definition>
		<!-- disable small grid welder -->
		<Definition xsi:type="MyObjectBuilder_ShipWelderDefinition" enabled="true">
			<Id>
				<TypeId>ShipWelder</TypeId>
				<SubtypeId>SmallShipWelder</SubtypeId>
			</Id>
			<SensorRadius>0.1</SensorRadius> <!-- vanilla 1.3 -->
			<DeformationRatio>0.2</DeformationRatio>
			<UsesDeformation>false</UsesDeformation>
		</Definition>
		<!-- adjust proto drill comps -->
        <Definition xsi:type="MyObjectBuilder_ShipDrillDefinition">
            <Id>
                <TypeId>Drill</TypeId>
                <SubtypeId>LargeBlockPrototechDrill</SubtypeId>
            </Id>
			<DisplayName>Advanced Ship Drill</DisplayName>
            <Components>
                <Component Subtype="SteelPlate" Count="180" />
				<Component Subtype="PrototechMachinery" Count="5"/>
                <Component Subtype="Construction" Count="40" />
                <Component Subtype="LargeTube" Count="12" />
                <Component Subtype="Motor" Count="5" />
                <Component Subtype="Computer" Count="5" />
                <Component Subtype="SteelPlate" Count="120" />
            </Components>
            <CriticalComponent Subtype="Computer" Index="0" />
        </Definition>
 	</CubeBlocks>
</Definitions>
